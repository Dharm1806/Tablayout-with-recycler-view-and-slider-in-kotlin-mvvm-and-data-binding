<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="observations"
            type="com.tekmindz.covidhealthcare.repository.responseModel.Notification" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_20dp"
        android:layout_marginEnd="@dimen/padding_20dp"
        android:layout_marginBottom="@dimen/padding_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/item_layout_observations">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notification_message"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/text_size_15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/margin_10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Mark is in critical condition Mark is in critical condition  Mark is in critical condition Mark is in critical condition"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notification_time"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/text_size_12.5sp"
                android:textColor="@color/dashboard_text_color"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="06:12 Am"
                android:paddingBottom="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/padding_20dp"
                android:layout_marginEnd="@dimen/padding_20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_10dp"
                app:layout_constraintTop_toBottomOf="@+id/notification_message" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>