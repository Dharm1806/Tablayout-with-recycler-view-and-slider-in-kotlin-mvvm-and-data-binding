<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="observations"
            type="com.tekmindz.covidhealthcare.repository.responseModel.Notification" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_20dp"
        android:layout_marginEnd="@dimen/padding_20dp"
        android:layout_marginBottom="@dimen/padding_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/item_layout_observations">

<ImageView
    android:layout_width="@dimen/width_50dp"
    android:layout_height="wrap_content"
    android:id="@+id/ic_notification"
    android:src="@drawable/ic_temp_recovered"
    android:layout_margin="@dimen/margin_10dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginEnd="@dimen/margin_10dp"
    app:layout_constraintStart_toStartOf="parent"
    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reading"
                android:fontFamily="@font/roboto_black"
                android:textSize="@dimen/dimen_17sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_margin="@dimen/margin_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ic_notification"
                android:text=" 12Bprm"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_notification_message"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/text_size_15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_margin="@dimen/margin_10dp"
                app:layout_constraintStart_toEndOf="@+id/tv_reading"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Mark is in critical condition"
                android:textColor="@color/dashboard_text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_bed_no"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/text_size_15sp"
                android:layout_marginStart="@dimen/margin_10dp"
                app:layout_constraintStart_toEndOf="@+id/tv_reading"
                app:layout_constraintTop_toBottomOf="@+id/tv_notification_message"
                android:text="Bed No:  12"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ward_no"
                android:fontFamily="@font/roboto_light"
                android:textSize="@dimen/text_size_15sp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:paddingBottom="@dimen/padding_20dp"
                android:text="Ward no: 23"
                app:layout_constraintStart_toEndOf="@+id/tv_reading"
                app:layout_constraintTop_toBottomOf="@+id/tv_bed_no"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_patient_status"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/status_text_size"
                android:textColor="@color/white"
                android:text="Critical"
                android:background="@drawable/critical_bg"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/padding_20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:paddingTop="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_10dp"
               />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>