<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tab_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/padding_20dp"
        android:textSize="@dimen/text_size_15sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/dashboard_text_color"
        android:text="@string/blood_pressure"/>
    <ImageView
        android:layout_width="@dimen/text_size_15sp"
        android:layout_height="@dimen/text_size_15sp"
        android:id="@+id/cancel_action"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_20dp"
        android:background="@color/tab_background"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/ab_cross_login" />

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_Sys"
            style="@style/Widget.Design.TextInputLayoutPD"
            android:theme="@style/TextInputLayoutAppearancePD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:gravity="start"
            android:layout_weight="1.5"
            android:textColorHint="@color/patient_details_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvSlash"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/sys_mmhg"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/patient_details_text"
                android:textColorHint="@color/patient_details_text"
                android:textSize="@dimen/field_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_weight="0.15"
            android:textSize="40sp"
            android:textColor="@color/patient_details_text"
            app:layout_constraintRight_toLeftOf="@+id/tv_dia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvSlash" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_dia"
            style="@style/Widget.Design.TextInputLayoutPD"
            android:theme="@style/TextInputLayoutAppearancePD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_weight="1.5"
            android:textColorHint="@color/patient_details_text"
            app:layout_constraintLeft_toRightOf="@+id/tvSlash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/dia_mmhg"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/patient_details_text"
                android:textColorHint="@color/patient_details_text"
                android:textSize="@dimen/field_text_size" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveBloodPressure"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_20dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_input"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/text_size_15sp"
        android:text="@string/action_save"
        android:textAllCaps="true"
        android:background="@drawable/title_bg"
        android:paddingStart="@dimen/padding_20dp"
        android:paddingEnd="@dimen/padding_20dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelBloodPressure"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/padding_20dp"
        app:layout_constraintEnd_toStartOf="@+id/saveBloodPressure"
        app:layout_constraintTop_toBottomOf="@+id/layout_input"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/text_size_15sp"
        android:text="@string/action_cancel"
        android:textAllCaps="true"
        android:paddingStart="@dimen/padding_20dp"
        android:paddingEnd="@dimen/padding_20dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:textColor="@color/red"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveBloodPressure"
        android:fontFamily="@font/roboto_regular"
        android:textAllCaps="true"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>