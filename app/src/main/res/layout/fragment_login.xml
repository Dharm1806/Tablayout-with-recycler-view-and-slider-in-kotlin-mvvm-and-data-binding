<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_emailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_20dp"
                android:layout_marginTop="@dimen/padding_20dp"
                android:layout_marginEnd="@dimen/padding_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="@string/msg_email"
                    android:inputType="textWebEmailAddress"
                    android:textColor="@color/form_field_text_color"
                    android:textColorHint="@color/form_field_text_color"
                    android:textSize="@dimen/field_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_passwordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_20dp"
                android:layout_marginEnd="@dimen/padding_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/text_emailLogin"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="@string/msg_password"
                    android:inputType="textWebPassword"
                    android:textColor="@color/form_field_text_color"
                    android:textColorHint="@color/form_field_text_color"
                    android:textSize="@dimen/field_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_50dp"
                android:layout_marginStart="@dimen/padding_20dp"
                android:layout_marginTop="@dimen/padding_20dp"
                android:layout_marginEnd="@dimen/padding_20dp"
                android:background="@drawable/btn_signup_bg"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/text_passwordLogin"

                android:padding="@dimen/margin_10dp"
                android:text="@string/action_login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size" />


        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margint_top_app_name"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/app_name_text_size"
            android:fontFamily="@font/opensans_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_cancel"/>

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="@dimen/width_50dp"
            android:layout_height="@dimen/width_50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/width_50dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ab_cross_login" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:id="@+id/notHaveAccount"
                android:layout_marginBottom="@dimen/padding_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/msg_don_t_have_an_account"
                android:textColor="@color/form_field_text_color"
                android:textSize="@dimen/text_size_14" />
            <TextView
                android:id="@+id/text_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="@dimen/signup_start_margin"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:layout_marginBottom="@dimen/padding_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@+id/notHaveAccount"
                android:text="@string/action_signup"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/text_size_14"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>