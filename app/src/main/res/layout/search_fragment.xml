<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="searchViewModel"
            type="com.tekmindz.covidhealthcare.ui.search.SearchViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/tab_background"
        android:layout_height="match_parent">

<androidx.appcompat.widget.SearchView
    android:layout_width="match_parent"
    android:layout_height="@dimen/width_50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/searchView"
    app:queryHint="Search "
    app:iconifiedByDefault="true"
    android:layoutDirection="rtl"
    android:paddingStart="@dimen/width_50dp"
    android:paddingEnd="@dimen/width_50dp"
    android:theme="@style/TextInputLayoutAppearance"
    app:queryBackground="@android:color/transparent"
    android:background="@drawable/title_bg"
    />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchView"
                android:background="@color/white"
                android:layout_margin="@dimen/padding_20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_critical_patient_list"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>