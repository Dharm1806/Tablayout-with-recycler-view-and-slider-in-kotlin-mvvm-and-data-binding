<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="LoginViewModel"
            type="com.tekmindz.covidhealthcare.ui.setBaseUrl.SetBaseUrlViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_login_bg">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_emailLogin"
            style="@style/Widget.Design.TextInputLayout1"
            android:theme="@style/TextInputLayoutAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/text_app_name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/msg_email"
                android:text="@={LoginViewModel.UserName}"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/field_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_passwordLogin"
            style="@style/Widget.Design.TextInputLayout1"
            android:theme="@style/TextInputLayoutAppearance"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_emailLogin"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/msg_base_url"
                android:text="@={LoginViewModel.Password}"
                android:inputType="textWebEditText"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/field_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_20dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_20dp"
            android:background="@drawable/btn_signup_bg"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:padding="@dimen/text_size_15sp"
            android:text="@string/action_submit"
            android:onClick="@{(v) -> LoginViewModel.onClick(v)}"
            android:textColor="@color/drawer_bg"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintTop_toBottomOf="@+id/text_passwordLogin" />


        <ImageView
            android:id="@+id/text_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margint_top_app_name"
            android:background="@drawable/login_logo"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <com.tekmindz.covidhealthcare.utills.MovableButton
            android:id="@+id/bt_sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/width_50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/text_size_15sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="bottom|end"
            android:background="@drawable/ic_sos"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>