<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home">
    <action
        android:id="@+id/navigateToLogin"
        app:destination="@id/login"
       />

    <fragment
        android:id="@+id/login"
        android:name="com.tekmindz.covidhealthcare.destinations.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login">
        <action
             android:id="@+id/loginToHome"
             app:destination="@id/home"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/loginToSignup"
            app:destination="@id/home"
            app:popUpTo="@id/login"
            />
        <action
            android:id="@+id/loginToForgetPassword"
            app:destination="@id/home"
            app:popUpTo="@+id/splash"
            />
    </fragment>

     <fragment
          android:id="@+id/home"
          android:name="com.tekmindz.covidhealthcare.destinations.HomeFragment"
          android:label="@string/app_name"
          tools:layout="@layout/fragment_home">

         <action
             android:id="@+id/homeTologin"
             app:destination="@id/login"
             app:popUpTo="@id/home"
             app:popUpToInclusive="true"/>

          <argument
              android:name="issue_number"
              android:defaultValue="1234"
              app:argType="string" />
          <deepLink
              android:id="@+id/deepLink"
              app:uri="https://www.navigation.com/locationdetails?issue_number={issue_number}" />
      </fragment>
</navigation>