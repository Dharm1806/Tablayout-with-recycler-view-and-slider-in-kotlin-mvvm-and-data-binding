<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home">
    <action
        android:id="@+id/navigateToLogin"
        app:destination="@id/login" />
    <action
        android:id="@+id/homeTologin"
        app:destination="@id/login"
        app:popUpTo="@id/home"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/homeToPatientDetails"
        app:destination="@id/patient_details" />
    <action
        android:id="@+id/homeToSetUrl"
        app:destination="@id/setBaseUrl"
        />

    <fragment
        android:id="@+id/login"
        android:name="com.tekmindz.covidhealthcare.ui.login.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/loginToHome"
            app:destination="@id/home"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/loginToSignup"
            app:destination="@id/home"
            app:popUpTo="@id/login" />
        <action
            android:id="@+id/loginToForgetPassword"
            app:destination="@id/home"
            app:popUpTo="@+id/splash" />
    </fragment>
    <fragment
        android:id="@+id/setBaseUrl"
        android:name="com.tekmindz.covidhealthcare.ui.setBaseUrl.SetBaseUrlFragment"
        android:label="@string/set_base_url"
        tools:layout="@layout/fragment_set_base_url_login">
        <action
            android:id="@+id/setBaseUrlToHome"
            app:destination="@id/home"
            app:popUpTo="@id/setBaseUrl"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/home"
        android:name="com.tekmindz.covidhealthcare.ui.dashboard.HomeFragment"
        android:label="@string/dashboard"
        tools:layout="@layout/fragment_home">



        <action
            android:id="@+id/homeToSearch"
            app:destination="@id/search" />

        <action
            android:id="@+id/homeToObservations"
            app:destination="@id/observations"
            app:popUpTo="@id/home"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/observations"
        android:name="com.tekmindz.covidhealthcare.ui.dashboard.DashboardItemFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_tab_item">
        <action
            android:id="@+id/observationsToPatientDetails"
            app:destination="@id/patient_details" />
    </fragment>
<!--
    <navigation android:id="@+id/premium_flow"
        app:startDestination="@id/patient_details">-->
    <fragment
        android:id="@+id/patient_details"
        android:name="com.tekmindz.covidhealthcare.ui.patientDetails.PatientDetailFragment"
        android:label="@string/patient_details"
        tools:layout="@layout/patient_detail_fragment">
        <argument
            android:name="patientId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/pDetailsToUpdateReadings"
            app:destination="@id/updatePatientDetails" />

        <action
            android:id="@+id/pDetailsToAnalytics"
            app:destination="@id/analytics" />

    </fragment>
        <fragment
            android:id="@+id/analytics"
            android:name="com.tekmindz.covidhealthcare.ui.patientAnalytics.AnalyticsFragment"
            android:label="@string/title_view_statics"
            tools:layout="@layout/fragment_home">
            <argument
                android:name="patientId"
                app:argType="integer"
                android:defaultValue="0" />
            <argument
                android:name="patientName"
                app:argType="string"
                android:defaultValue="Mark" />
            <action
                android:id="@+id/homeToPatientDetails"
                app:destination="@id/patient_details" />
        </fragment>
   <!-- </navigation>-->

    <fragment
        android:id="@+id/search"
        android:name="com.tekmindz.covidhealthcare.ui.search.SearchFragment"
        android:label=""
        tools:layout="@layout/search_fragment">

        <action
            android:id="@+id/homeToPatientDetails"
            app:destination="@id/patient_details" />
        <action
            android:id="@+id/searchToHome"
            app:destination="@id/home"
            app:popUpTo="@id/search"
            app:popUpToInclusive="true" />
    </fragment>




    <fragment
        android:id="@+id/updatePatientDetails"
        android:name="com.tekmindz.covidhealthcare.ui.updatePatientDetails.UpdatePatientDetailsFragment"
        android:label="@string/b_p_reading"
        tools:layout="@layout/fragment_update_patient">
        <action
            android:id="@+id/homeToPatientDetails"
            app:destination="@id/patient_details" />
    </fragment>



</navigation>